import DarkMode from "./DarkMode.astro";
---
<script>
   window.addEventListener('scroll',()=>{
    const docHeight = document.documentElement.scrollHeight - window.innerHeight
    const scrollPercentage = Math.floor((scrollY/docHeight)*100)
    if(scrollPercentage === 100){
      document.querySelector('#percentage')!.textContent =``
    } else {
      return document.querySelector('#percentage')!.textContent =`${scrollPercentage}%`
    }
  })
</script>


<header class=" w-full flex justify-center fixed px-3 top-0  text-[#262625] dark:text-[#F3F3F1] z-10">
  <div class="flex justify-between max-w-[1440px] w-full items-center my-5 ">
    <h1 class="bg-[#262625] text-[#EBEDFF] font-bold text-xs inline-block px-3 py-1.5 rounded-full rotate-[8deg] dark:text-[#262625] dark:bg-[#EBEDFF] ">LA PISCINE</h1>
    <span class="font-bold text-xs dark:text-[#262625] dark:bg-[#F3F3F1] px-2 py-1.5 rounded-full" id="percentage">0%</span>
  <DarkMode/>
  </div>
  
</header>